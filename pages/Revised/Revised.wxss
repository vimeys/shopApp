page{
    background-color: #f0f0f0;
}
.top{
    margin-bottom: 10rpx;
    display: flex;
}
.top-a{
    background-color: #fff;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #a0a0a0;
    display: flex;
    justify-content: center;
    flex: 1;
}
.body>view{
    padding: 0 20rpx 0 20rpx;
}
.body-a{
    background-color: #fff;
    margin-top: 20rpx;
}
.top-b{
    border-bottom: 4rpx solid #ea3900;
    color: #ea3900;
}
.body-a-top{
    line-height: 60rpx;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
}
.body-a-top-number{
    color: #6e6e6e;
}
.body-a-top-manny{
    color: #d02525;
}
/*复制的那截*/
.promotion{
    position: relative;
    display: flex;
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  
}
.list{
    display: flex;
}
.image{
    width: 200rpx;
    height: 200rpx;
    position: relative;
}
.image .image_main{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
}
.image .image_small{
    width: 54rpx;
    height: 54rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 11;
}
.title{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
    margin-top: 6rpx;
    border-bottom: 1px solid #eee;
    font-size: 36rpx;
}
.title .promotion_main{
    width: 480rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    font-size: 36rpx;
}
.promotion_Standard{
    font-size: 32rpx;
    color: #6e6e6e;
}
.title .promotion_scale{
    font-size: 28rpx;
    color:#ff9388;
}
.promotion_button{
    display: flex;
    justify-content: space-between;
}
.promotion_price{
    color:#EA4736;
    font-size: 32rpx;
}
.chose-01{
    background-color: #eee;
}
.Obstruction{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: -6rpx;
    right: 0;
    height: 210rpx;
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 12;
}
.Obstruction-shan{
    font-weight: 600;
    font-size: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 134rpx;
    height: 134rpx;
    border-radius: 50%;
    background-color: #2cb2ab;
    color: #ffffff;
}
.body-a-shopp{
    padding: 34rpx 0rpx 50rpx 0rpx;
    color: #1A1A1A;
    font-size: 30rpx;
    display: flex;
    justify-content: flex-end;
}
.body-a-shopp-Useless{
    font-size: 36rpx;
}
.body-a-time{
    border-bottom: 2rpx #eee solid;
    padding-bottom: 43rpx;
    font-size: 30rpx;
    color: #6e6e6e;
    display: flex;
    justify-content: space-between;
}
.body-a-time-manny{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #ffffff;
    border-radius: 10rpx;
    background-color: #ea3900;
    width: 140rpx;
    height: 50rpx;
}
.bottom-all{
    position: relative;
    /* height: 88rpx; */
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.bottom-all-Kamishi{
    display: flex;
    align-items: center;
    margin-top:20rpx;
    margin-bottom: 20rpx;
}
.bottom-all-Kamishi-Test{
    padding-left: 10rpx;
    font-size: 30rpx;
    color: #00a79e;
}
.Explanation{
    position: absolute;
    right: 0;
