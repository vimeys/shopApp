/* pages/goodsDetail/goodsDetail.wxss */
.slide-image{
    width: 100%;
    height: 420rpx;
}
.swiper{
    width: 100%;
    height: 420rpx;
}
.goods_title{
    margin-top: 30rpx;
    width: 100%;
}
.title{
    width: 700rpx;
    height: 80rpx;
    line-height: 40rpx;
    font-size: 36rpx;
    color:#1a1a1a;
    margin-left: 20rpx;
    margin-bottom: 15rpx;
}
.main{
    line-height: 40rpx;
    width: 100%;
    margin-left: 20rpx;
}
.new_price{
    font-size: 32rpx;
    color:#eb4735;
    line-height: 40rpx;
}
.del_price{
    font-size: 24rpx;
    text-decoration: line-through;
    color:#989898;
    margin-left: 20rpx;
}
.sales{
    float:right;
    font-size: 24rpx;
    color: #1a1a1a;
    margin-right: 50rpx;
}
.TBD{
    margin-top: 30rpx;
    width: 100%;
}
.progress{
    margin-left: 20rpx;
}
.point{
    font-size: 32rpx;
    color: #1a1a1a;
    line-height: 40rpx;
    margin-left: 10rpx;
}
.TBD_people{
    font-size: 28rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    color:#1a1a1a;
}
.TBD_price{
    width: 100%;
    margin-left: 20rpx;
}
.money{
    font-size: 32rpx;
    line-height: 40rpx;
    color:#00a79e;
}
.time{
    float:right;
    color:#989898;
    font-size: 28rpx;
    margin-right: 40rpx;
}
.fix{
    width: 100%;
    height: 100rpx;
    display: flex;
    position: fixed;
    bottom:0;
    background: #fff;
    /* padding-top:5rpx; */
}
.fixed{
    display: block;
    background: #EA4736;
    text-align: center;
    line-height: 100rpx;
    color:#fff;
}
.cart{
    width: 25%;
    display: flex;
    flex-direction:column;
    /*justify-content: center;*/
    align-items:center;
    margin-top: 5rpx;
}
.cart image{
    width: 50rpx;
    height: 50rpx;
}
.collect{
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items:center;
    margin-top: 5rpx

}
.collect image{
    width: 50rpx;
    height: 50rpx;
}
.joinCart{
    width: 50%;
    height: 100%;
    color:#fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 100rpx;
    background: #EA4736;
}

.show-popup{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    z-index: 4;
}
.popup-mask{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 5;
}
.popup-contents{
    position: fixed;
    left: 0;
    bottom: 0;
    width:100%;
    background-color: #fff;
    z-index: 6;
}
.pop-goods-info{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 30rpx;
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
}
.pop-img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
    width: 120rpx;
    height: 120rpx;
}
.pop-goods-title{
    width: 484rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size:36rpx;
    color:#000000;
}
.pop-goods-price{
    font-size:26rpx;
    color:#e64340;
    margin-top:20rpx;
}
.pop-goods-close{
    width: 36rpx;
    height: 36rpx;
    flex: 1;
    background:url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
    background-size: 36rpx auto;
    align-self: flex-start;
    margin-top: -10rpx;
}
.size-label-box  .label{
    font-size:26rpx;
    color:#000;
    padding-left: 30rpx;
    padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
    display: flex;
    margin-left: 30rpx;
    flex-direction: row;
    flex-wrap:wrap;
}
.size-label-box .label-item{
    font-size:26rpx;
    color:#000;
    padding: 14rpx 20rpx;
    border: 1px solid #ddd;
    border-radius: 66rpx;
    margin: 0 20rpx 20rpx 0;

}
.size-label-box .label-item.active{
    color: #e64340;
    border: 1px solid #e64340;
}
.buy-num-box{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 30rpx 48rpx 0;
    margin-left: 30rpx;
    border-top: 1px solid #eee;
    margin-top: 30rpx;
    align-items: center;
}
.num-label{
    font-size:26rpx;
    color:#000000;
}
.buy-num-box .num-box{
    display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
    width: 80rpx;
    height: 64rpx;
    line-height: 62rpx;
    text-align: center;
    border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
    font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
    height: 100%;
}
.popup-join-btn{
    width: 100%;
    height: 89rpx;
    text-align: center;
    line-height: 89rpx;
    font-size:34rpx;
    color:#ffffff;
    background-color: #e64340;
}
.buy-num-box .num-box .hui{
    background-color: #f5f5f9;
}