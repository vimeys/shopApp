<block wx:for="{{data}}" wx:for-index="index">
    <view class="promotion">
        <view class='Obstruction' wx:if="{{item.del}}" data-type="{{index}}">
            <view class='Obstruction-shan' bindtap="delClick" >删除</view>
        </view>
        <view class='chose-all' bindtap="choose" data-type="{{index}}">
            <view class="btn {{item.active?'chose':''}}">
                <image style='width:43rpx;height:31rpx;' src='../image/chose.png'></image>
            </view>
        </view>
        <view class="list"  bindlongpress="longClick">
            <view class="image">
                <image class='image_main' src="../image/goods.png"></image>
                <image  wx:if="{{item.is_type==1}}" class="image_small" src="../image/promto.png"></image>
            </view>
        </view>
        <view class="title" bindtap="click" >
            <view class='promotion_main-all'>
                <view class="promotion_main">{{item.goodsName}}</view>
                <view class='promotion_text'>蓝色, 64V, 120km</view>
            </view>
            <view class="promotion_button">
                <text class="promotion_price">￥2222.00</text>
                <text class='promotion-shu'>x5</text>
            </view>
        </view>
    </view>

</block>
