.search input{
    line-height: 90rpx;
    width: 450rpx;
    display: inline-block;
    padding-left: 20rpx;
}
.search{
    background: #fff;
}
.search .input{
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    background-color: #eee;
    border-radius: 40rpx;
}



page{
    border-top: 2rpx #eee solid;
}
.promotion{
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.list{
    display: flex;
}
.image{
    width: 200rpx;
    height: 200rpx;
    position: relative;
}
.image .image_main{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
}
.image .image_small{
    width: 54rpx;
    height: 54rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
}
.title{
    margin-left: 20rpx;
    margin-right:20rpx ;
    margin-top: 10rpx;
    border-bottom: 1px solid #eee;
    font-size: 36rpx;
}
.TbD_people{
    font-size: 30rpx;
    color: #989898;
}
.point{
    font-size: 36rpx;
    color:#00a79e;
    margin-left: 20rpx;
}
.title .promotion_main{
    font-size: 36rpx;
}
.promotion_price{
    color:#EA4736;
    font-size: 32rpx;
}
.promotion_people{
    font-size: 28rpx;
    color:#989898;
}
.promotion_price_del{
    color:#989898;
    font-size: 22rpx;
    margin-left: 5rpx;
}
.promotion_num{
    color:#989898;
    font-size: 22rpx;
    margin-left: 80rpx;
}
