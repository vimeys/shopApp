/*弹窗css*/
.fix{
    width: 100%;
    height: 100rpx;
    color:#fff;
    background: #00a79e;
    font-size: 36rpx;
    text-align: center;
    line-height: 100rpx;
    position: fixed;
    bottom: 0;
}
.model{
    position: fixed;
    bottom: 100rpx;
    width: 100%;
    border-top: 1px solid #ccc;
    box-shadow: 10rpx 10rpx 5rpx #ccc;
    /*background: #fff;*/
    background-color: rgba(255,255,255,0.9);
    /*display: flex;*/
    z-index: 12;
}
.model_name{
    text-align: center;
    line-height: 80rpx;
    color: #00a79e;
    font-size: 36rpx;

}
.goods{
    margin: 20rpx 67rpx;
    width: 238rpx;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 60rpx;
    text-align: center;
    height: 60rpx;
    overflow: hidden;
    line-height: 60rpx;
    font-size: 30rpx;
}
.choose{
    border: 1rpx solid #00a79e;
    color:#fff;
    background: #00a79e;
}