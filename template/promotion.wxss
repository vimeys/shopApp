/* pages/Further/Further.wxss */
page{
    border-top: 2rpx #eee solid;
}
.promotion{
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.list{
    display: flex;
}
.image{
    width: 200rpx;
    height: 200rpx;
    position: relative;
}
.image .image_main{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
}
.image .image_small{
    width: 54rpx;
    height: 54rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
}
.title .promotion_main{
    font-size: 36rpx;
}
.title .promotion_scale{
    font-size: 28rpx;
    color:#ff9388;
}

.promotion_price{
    color:#EA4736;
    font-size: 32rpx;
}
.promotion_price_del{
    color:#989898;
    font-size: 22rpx;
    margin-left: 5rpx;
}
.promotion_num{
    color:#989898;
    font-size: 22rpx;
    /* margin-left: 80rpx; */
}
.name-name{
    margin-right: 20rpx;
    padding: 0rpx 10rpx 0rpx 10rpx;
    font-size: 22rpx;
    color: #EA4736;
    border: 2rpx #EA4736 solid;
    border-radius: 20rpx;
}
/*冯川改*/
.promotion_button{
    display: flex;
    justify-content: space-between;
    align-items: center;
}