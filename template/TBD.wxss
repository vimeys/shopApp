.promotion{
    width: 100%;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}
.list{
    display: flex;
}
.image{
    width: 200rpx;
    height: 200rpx;
    position: relative;
}
.image .image_main{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
}
.image .image_small{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
}
.title{
    margin-left: 40rpx;
    margin-right:40rpx ;
    margin-top: 20rpx;
    border-bottom: 1px solid #eee;
    font-size: 36rpx;
}
.progress{
    margin-top: 30rpx;
}
.title .promotion_main{
    font-size: 36rpx;
}
.title .promotion_scale{
    font-size: 28rpx;
    color:#ff9388;
}
.promotion_button{
    margin-top: 50rpx;
}
.promotion_price{
    color:#EA4736;
    font-size: 32rpx;
}
.promotion_price_del{
    color:#989898;
    font-size: 22rpx;
    margin-left: 5rpx;
}
.promotion_num{
    color:#989898;
    font-size: 22rpx;
    margin-left: 80rpx;
}